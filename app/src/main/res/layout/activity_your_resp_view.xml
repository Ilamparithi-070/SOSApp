<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YourRespView"
    android:background="@drawable/background">

    <Button
        android:id="@+id/AddECButton"
        android:layout_width="119dp"
        android:layout_height="51dp"
        android:layout_marginEnd="16dp"
        android:text="REMOVE "
        android:backgroundTint="#AF37A3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toEndOf="@+id/BackToViewEC"
        app:layout_constraintTop_toBottomOf="@+id/EmergencyContactViewList"
        app:layout_constraintVertical_bias="0.523" />

    <TextView
        android:id="@+id/ECEditTitle"
        android:layout_width="278dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:text="People who Added You As Emergency Contact"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/EmergencyContactViewList"
        android:layout_width="385dp"
        android:layout_height="539dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ECEditTitle"
        app:layout_constraintVertical_bias="0.112" />

    <Button
        android:id="@+id/BackToViewEC"
        android:layout_width="108dp"
        android:layout_height="52dp"
        android:layout_marginStart="68dp"
        android:text="Back"
        android:backgroundTint="#AF37A3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmergencyContactViewList" />
</androidx.constraintlayout.widget.ConstraintLayout>